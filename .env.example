# Database Configuration (PostgreSQL 17)
POSTGRES_DB=dastern
POSTGRES_USER=dastern_user
POSTGRES_PASSWORD=dastern_password
POSTGRES_PORT=5432
DATABASE_URL="postgresql://dastern_user:dastern_password@localhost:5432/dastern?schema=public"

# Redis Configuration (Redis 7.4)
REDIS_PASSWORD=dastern_redis_password
REDIS_PORT=6379
REDIS_URL="redis://:dastern_redis_password@localhost:6379"

# RabbitMQ Configuration (RabbitMQ 4.0)
RABBITMQ_USER=dastern_user
RABBITMQ_PASSWORD=dastern_password
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_URL="amqp://dastern_user:dastern_password@localhost:5672"

# MinIO Configuration (S3-compatible storage)
MINIO_ROOT_USER=dastern_admin
MINIO_ROOT_PASSWORD=dastern_password
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ENDPOINT="http://localhost:9000"
MINIO_BUCKET_NAME=dastern-uploads

# Next.js Configuration (Next.js 15)
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3000

# NextAuth.js Configuration (NextAuth v5)
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production
NEXTAUTH_URL=http://localhost:3000
AUTH_TRUST_HOST=true

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# SMS Service Configuration (for OTP)
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.sms-provider.com/send

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# Application Configuration
APP_NAME="Das Tern"
APP_URL=http://localhost:3000
DEFAULT_LANGUAGE=khmer
DEFAULT_TIMEZONE=Asia/Phnom_Penh

# Storage Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Rate Limiting
RATE_LIMIT_AUTH=5
RATE_LIMIT_OTP=3
RATE_LIMIT_API=100
RATE_LIMIT_UPLOAD=10

# Subscription Plans
FREEMIUM_STORAGE_GB=5
PREMIUM_STORAGE_GB=20
PREMIUM_PRICE_USD=0.50
FAMILY_PREMIUM_PRICE_USD=1.00
FAMILY_PREMIUM_MAX_MEMBERS=3

# Stripe Configuration (for payments)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PREMIUM_PRICE_ID=price_premium_id
STRIPE_FAMILY_PRICE_ID=price_family_id

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@dastern.com
SENDGRID_FROM_NAME="Das Tern"

# Firebase Cloud Messaging (for push notifications)
FCM_SERVER_KEY=your-fcm-server-key
FCM_PROJECT_ID=your-firebase-project-id

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
